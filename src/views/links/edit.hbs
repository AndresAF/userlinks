<div class="container">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{links.id}}" method="post">
                    <div class="form-group">
                    <input type="text" class="form-control" autofocus name="title" value="{{links.title}}">
                    </div>
                    <div class="form-group">
                    <input type="url" class="form-control"  name="url" value="{{links.url}}">
                    </div>
                    <div class="form-group">
                    <textarea class="form-control"  rows="2"name="description" > {{links.description}}</textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success"> save</button>
                    </div>

                </form>
                </div>
            </div>
        </div>
    </div>
</div>